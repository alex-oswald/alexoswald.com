{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Development (livereload/drafts)",
            "type": "shell",
            "command": "bundle exec jekyll serve --verbose --drafts --livereload",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "isBackground": true
        },
        {
            "label": "Production Build",
            "type": "shell",
            "command": "bundle exec jekyll build --verbose"
        }
    ]
}